{
  //Mysql数据库配置
  "MySqlDbOptions": {
    "ConnectionName": "quzhou_baseasset",
    "ConnectionString": "Database=quzhou_baseasset;Data Source=47.96.116.129;User Id=root;Password=panchina;CharSet=utf8;port=3306;Allow User Variables=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  //跨域配置
  "CorsOptions": {
    //允许跨域的源列, ""表
    "AllowOrigins": [ "http://localhost:50001", "http://localhost:12313", "http://localhost:5000" ]
  },
  //Serilog配置
  "Serilog": {
    "MinimumLevel": "Debug",
    "WriteTo": [
      //调试日志设置 涵盖级别 Debug,Information
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l in ['Debug','Information']"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/debug/debug.log", //日志记录路径
                  "fileSizeLimitBytes": "200000", //每个文件最大写入的大小 1000大概是100k
                  "rollOnFileSizeLimit": true, //超出上面的文件最大写入大小 会生成新的文件 
                  "rollingInterval": "Day" //每天生成一个日志文件
                }
              }
            ]
          }
        }
      },
      //错误日志设置 涵盖级别 Error
      {
        "Name": "Logger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@l in ['Error']"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "File",
                "Args": {
                  "path": "logs/error/error.log", //日志记录路径
                  "fileSizeLimitBytes": "100000", //每个文件最大写入的大小 1000大概是100k
                  "rollOnFileSizeLimit": true, //超出上面的文件最大写入大小 会生成新的文件 
                  "rollingInterval": "Day" //每天生成一个日志文件
                }
              }
            ]
          }
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
